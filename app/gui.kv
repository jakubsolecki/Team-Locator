#:include teammapview.kv

<WindowManager>:
    TokenWindow:
        id:tw
    HostWindow:
        id:hw
    MapWindow:
        id:mw


<HostWindow>:
    name: "host"
    switch: switch
    slider: slider
    tv: tv

    GridLayout:
        cols: 1

        Label:
            text: "Tworzenie gry"
        GridLayout:
            cols: 2
            Label:
                text: "Host widoczny:"
            Switch:
                id: switch

        Slider:
            id: slider
            min: 1
            max: 10
            step: 1
            on_touch_move: root.create_nodes()

        TreeView:
            id: tv
            size: root.width, root.height * 0.6
            size_hint: None, None


        Button:
            text: "Connect"
            on_release: root.send_to_server()
            on_release: app.root.current = "viewer"

        Button:
            text: "Go back"
            on_release: app.root.current = "menu"


<MapWindow>:
    name: "viewer"
    GridLayout:
        cols: 1

        TeamMapView:
            id: map

        Button:
            text: "Show full team"
            on_release: map.show_full_team()
            size: root.width, root.height * 0.1
            size_hint: None, None
        #Button:
            #text: "Leave"
            #on_release: app.root.current = "menu"          # I PO KLOPOCIE XD
            #size: root.width, root.height * 0.1
            #size_hint: None, None


<TokenWindow>:
    name: "menu"
    nick:nick
    code:code

    GridLayout:
        cols: 1

        TextInput:
            id: nick
            multiline: False

        TextInput:
            id: code
            multiline: False

        GridLayout:
            cols: 2
            Button:
                text: "Connect Game"
                on_release: app.root.current = "viewer"
                on_release: app.root.ids.tw.player_connect()
            Button:
                text: "Host Game"
                on_release: app.root.current = "host"
                on_release: app.root.ids.hw.create_nodes()
                on_release: app.root.ids.tw.host_connect()


<BtnPopup>:
    Button:
        size: root.width * 0.2, root.height * 0.05
        top: self.height and root.y + root.height
        text: "CODES"
        on_release: root.click()

    Label:
        outline_color: 0, 0, 0, 1
        color: 1, 1, 1, 1
        outline_width: 2
        size: root.width * 0.2, root.height * 0.05
        top: self.height and root.y + root.height
        right: self.width and root.x + (root.width/1.65)
        text: ">> ADMIN <<"

    Button:
        size: root.width * 0.2, root.height * 0.05
        right: self.width and root.x + root.width
        top: self.height and root.y + root.height
        text: "STOP"
        on_release: root.click() #TOCHANGE


<Pop>:
    Label:
        text: root.text
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}
